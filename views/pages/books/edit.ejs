<form action="/books/<%= book.id %>?_method=PUT" method="POST">
    <fieldset>

        <label for="img">Image: </label>
        <input id="img" type="text" name="img" value="<%= book.img %>" /><br><br>
        <label for="title">Title: </label>
        <input id="title" type="text" name="title" value="<%= book.title %>" /><br><br>
        <label for="author">Author: </label>
        <input id="author" type="text" name="author" value="<%= book.author %>" /><br><br>
        <label for="isbn">ISBN:</label>
        <input id="isbn" type="text" name="isbn" value="<%= book.isbn %>" /><br><br>
        <label for="shelf">Bookshelf:</label>
        <input id="shelf" type="text" name="shelf" value="<%= book.shelf %>" /><br><br>
        <label for="description">Description: </label>
        <textarea id="description" type="text" name="description" rows="10" cols="40">
    <%= book.description %>
    </textarea><br>

        <button type="submit">Edit</button>
        <br>
    </fieldset>
</form>